<% provide(:title, "出退勤") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=  form_with(url: attendance_path, scope: :worker, method: :post, local: true) do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: "form-control" %><br />
      <div class="radio_button">
        <%= f.radio_button :attendance_type, :arrival, id: "select_arrived"%>
        <%= f.label :attendance_type, "出勤", for: "select_arrived" %><br />
        <%= f.radio_button :attendance_type, :left, id: "select_left"  %>
        <%= f.label :attendance_type, "退勤", for: "select_left" %><br />
      </div>
      <%= f.submit "送信", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>