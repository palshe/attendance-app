<% provide(:title, "従業員追加")%>

<h1>従業員追加</h1>
<div class="center jumbotron">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @worker, local: true) do |f| %>

        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.submit "追加する", class: "btn btn-primary" %>
      <%end%>

      <%= link_to "ホームに戻る", root_path %>
    </div>
  </div>
</div>