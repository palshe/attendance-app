<% provide(:title, @worker.name) %>

<h1 class="name"><%= @worker.name %> <%= link_to "変更", edit_worker_path, class: "btn btn-primary" %> </h1>

<div class="form-label">残業時間を出す</div>

<div class="date_field">
  <%= form_with(model: @worker, url: overtime_worker_path, scope: :worker, method: :get, local: true) do |f| %>
    <%= f.date_field :start, class: "form-control date"%>
    から
    <%= f.date_field :end, class: "form-control date" %>
    まで

    <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>
</div>

<% if @worker.attendances.any? %>
  <ol class="attendances">
    <%= render @attendances %>
  </ol>
  <%= will_paginate @attendances %>
<% end %>
<%= link_to "一覧画面に戻る", workers_path %>